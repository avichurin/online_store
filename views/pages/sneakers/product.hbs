<script>
    var photos = {{{sneakers.photosJSON}}};

    var loaded = [];

    function preloadImages(startSrc) {

        if(loaded.indexOf(startSrc) === -1){
            var image = new Image();
            image.src = startSrc;
            loaded.push(startSrc);
        }
        for(var i=0; i<photos.length; i++){
            if(loaded.indexOf(photos[i])  === -1) {
                var image = new Image();
                image.src = photos[i];
                loaded.push(photos[i]);
            }
        }
    }

    function setImage(el) {
        let src = $(el).attr('src');

        var index = parseInt($(el).attr('data-index'));
        var srcShot = photos[index];

        if(loaded.indexOf(srcShot) === -1){
            $(".product img").attr("src", src);
        }


        preloadImages(srcShot);
        $(".product img").attr("src", srcShot);
    }

    document.addEventListener("DOMContentLoaded", function(event) {
        $("#main_image").attr("src", '{{sneakers.photoShot}}');
        $("#contact-image").attr("src", '{{sneakers.photoShot}}');
        $("#payment-image").attr("src", '{{sneakers.photoShot}}');


    });

</script>